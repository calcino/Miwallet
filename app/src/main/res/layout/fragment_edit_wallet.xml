<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.walletpage.fragment.EditWalletFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout_edit_wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blueAppbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp">


                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="24dp"
                        android:scaleType="center"
                        android:src="@drawable/backarrow"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Edit Wallets"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.498"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_view_save_edit_wallet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:text="save"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginEnd="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginBottom="15dp"
                        app:cardCornerRadius="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/appCompatTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginTop="16dp"
                                android:text="Initial Balance"
                                android:textColor="@color/text_blue"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edit_text_amount_edit_wallet"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginEnd="12dp"
                                android:layout_marginRight="12dp"
                                android:layout_marginBottom="12dp"
                                android:cursorVisible="false"
                                android:hint="$0.00"
                                android:inputType="numberDecimal"
                                android:textColor="@color/black"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/appCompatTextView" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/image_view_cal_edit_wallet"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="12dp"
                                android:layout_marginRight="12dp"
                                android:src="@drawable/calculator"
                                app:layout_constraintBottom_toBottomOf="@+id/edit_text_amount_edit_wallet"
                                app:layout_constraintEnd_toEndOf="@+id/edit_text_amount_edit_wallet"
                                app:layout_constraintTop_toTopOf="@+id/edit_text_amount_edit_wallet"
                                app:layout_constraintVertical_bias="0.375" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.appbar.AppBarLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appBarLayout_edit_wallet"
                app:layout_constraintVertical_bias="1.0">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_view_account_name_edit_wallet"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="24dp"
                    android:background="@drawable/blue_rounded"
                    android:paddingStart="20dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:text="Choose"
                    android:textColor="@color/text_gray"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@color/white"
                    android:text="Account Name"
                    android:textColor="@color/text_blue"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/text_view_account_name_edit_wallet"
                    app:layout_constraintHorizontal_bias="0.07"
                    app:layout_constraintStart_toStartOf="@+id/text_view_account_name_edit_wallet"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/downarrow"
                    app:layout_constraintBottom_toBottomOf="@+id/text_view_account_name_edit_wallet"
                    app:layout_constraintEnd_toEndOf="@+id/text_view_account_name_edit_wallet"
                    app:layout_constraintTop_toTopOf="@+id/text_view_account_name_edit_wallet"
                    app:layout_constraintVertical_bias="0.507" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_view_bank_edit_wallet"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="24dp"
                    android:background="@drawable/blue_rounded"
                    android:paddingStart="20dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:text="Choose"
                    android:textColor="@color/text_gray"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_account_name_edit_wallet" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@color/white"
                    android:text="Bank"
                    android:textColor="@color/text_blue"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/text_view_bank_edit_wallet"
                    app:layout_constraintHorizontal_bias="0.052"
                    app:layout_constraintStart_toStartOf="@+id/text_view_bank_edit_wallet"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_account_name_edit_wallet" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/downarrow"
                    app:layout_constraintBottom_toBottomOf="@+id/text_view_bank_edit_wallet"
                    app:layout_constraintEnd_toEndOf="@+id/text_view_bank_edit_wallet"
                    app:layout_constraintTop_toTopOf="@+id/text_view_bank_edit_wallet" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edit_text_description_edit_wallet"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="24dp"
                    android:background="@drawable/blue_rounded"
                    android:padding="20dp"
                    android:textColor="@color/text_gray"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.52"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_bank_edit_wallet" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@color/white"
                    android:text="Description"
                    android:textColor="@color/text_blue"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/edit_text_description_edit_wallet"
                    app:layout_constraintHorizontal_bias="0.062"
                    app:layout_constraintStart_toStartOf="@+id/edit_text_description_edit_wallet"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_bank_edit_wallet" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_material_saving_account_edit_wallet"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/blue_light_rounded"
                    android:paddingStart="20dp"
                    android:paddingLeft="20dp"
                    android:paddingEnd="20dp"
                    android:paddingRight="20dp"
                    android:text="Saving Account"
                    android:textColor="@color/text_blue1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edit_text_description_edit_wallet" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_material_total_balance_edit_wallet"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/blue_light_rounded"
                    android:checked="true"
                    android:paddingStart="20dp"
                    android:paddingLeft="20dp"
                    android:paddingEnd="20dp"
                    android:paddingRight="20dp"
                    android:text="Show In Total Balance"
                    android:textColor="@color/text_blue1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/switch_material_saving_account_edit_wallet" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            layout="@layout/category_bottom_sheet"
            android:visibility="gone" />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</ScrollView>