<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.homepage.fragment.IncomeFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout_income"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blueAppbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp">


                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="24dp"
                        android:scaleType="center"
                        android:src="@drawable/backarrow"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Add Income"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.498"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_view_save_income"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:text="save"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginEnd="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginBottom="15dp"
                        app:cardCornerRadius="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/appCompatTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginTop="16dp"
                                android:text="Amount"
                                android:textColor="@color/text_blue"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edit_text_amount_income"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginEnd="12dp"
                                android:layout_marginRight="12dp"
                                android:layout_marginBottom="12dp"
                                android:cursorVisible="false"
                                android:hint="$0.00"
                                android:inputType="numberDecimal"
                                android:textColor="@color/black"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/appCompatTextView" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/image_view_cal_income"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="12dp"
                                android:layout_marginRight="12dp"
                                android:src="@drawable/calculator"
                                app:layout_constraintBottom_toBottomOf="@+id/edit_text_amount_income"
                                app:layout_constraintEnd_toEndOf="@+id/edit_text_amount_income"
                                app:layout_constraintTop_toTopOf="@+id/edit_text_amount_income"
                                app:layout_constraintVertical_bias="0.375" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.appbar.AppBarLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appBarLayout_income"
                app:layout_constraintVertical_bias="1.0">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_view_category_income"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="24dp"
                    android:background="@drawable/blue_rounded"
                    android:paddingStart="20dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="12dp"
                    android:text="Choose"
                    android:textColor="@color/text_gray"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@color/white"
                    android:text="Category"
                    android:textColor="@color/text_blue"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/text_view_category_income"
                    app:layout_constraintHorizontal_bias="0.07"
                    app:layout_constraintStart_toStartOf="@+id/text_view_category_income"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/downarrow"
                    app:layout_constraintBottom_toBottomOf="@+id/text_view_category_income"
                    app:layout_constraintEnd_toEndOf="@+id/text_view_category_income"
                    app:layout_constraintTop_toTopOf="@+id/text_view_category_income"
                    app:layout_constraintVertical_bias="0.507" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_view_subcategory_income"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="24dp"
                    android:background="@drawable/blue_rounded"
                    android:paddingStart="20dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="12dp"
                    android:text="Choose"
                    android:textColor="@color/text_gray"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_category_income" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@color/white"
                    android:text="Subcategory"
                    android:textColor="@color/text_blue"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/text_view_subcategory_income"
                    app:layout_constraintHorizontal_bias="0.079"
                    app:layout_constraintStart_toStartOf="@+id/text_view_subcategory_income"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_category_income" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/downarrow"
                    app:layout_constraintBottom_toBottomOf="@+id/text_view_subcategory_income"
                    app:layout_constraintEnd_toEndOf="@+id/text_view_subcategory_income"
                    app:layout_constraintTop_toTopOf="@+id/text_view_subcategory_income" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edit_text_time_income"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="24dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/blue_rounded"
                    android:paddingStart="20dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="6dp"
                    android:text="00:00"
                    android:textColor="@color/text_gray"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@+id/edit_text_date_income"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_subcategory_income" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edit_text_date_income"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="24dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/blue_rounded"
                    android:paddingStart="20dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="6dp"
                    android:text="11 June, 2020"
                    android:textColor="@color/text_gray"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintStart_toEndOf="@+id/edit_text_time_income"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_subcategory_income" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@color/white"
                    android:text="Time"
                    android:textColor="@color/text_blue"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/edit_text_time_income"
                    app:layout_constraintHorizontal_bias="0.191"
                    app:layout_constraintStart_toStartOf="@+id/edit_text_time_income"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_subcategory_income" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@color/white"
                    android:text="Date"
                    android:textColor="@color/text_blue"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/edit_text_date_income"
                    app:layout_constraintHorizontal_bias="0.152"
                    app:layout_constraintStart_toStartOf="@+id/edit_text_date_income"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_subcategory_income" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_view_account_income"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="24dp"
                    android:background="@drawable/blue_rounded"
                    android:paddingStart="20dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="12dp"
                    android:text="Saderat"
                    android:textColor="@color/text_gray"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.333"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edit_text_time_income" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@color/white"
                    android:text="From Which Account"
                    android:textColor="@color/text_blue"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/text_view_account_income"
                    app:layout_constraintHorizontal_bias="0.112"
                    app:layout_constraintStart_toStartOf="@+id/text_view_account_income"
                    app:layout_constraintTop_toBottomOf="@+id/edit_text_time_income" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/downarrow"
                    app:layout_constraintBottom_toBottomOf="@+id/text_view_account_income"
                    app:layout_constraintEnd_toEndOf="@+id/text_view_account_income"
                    app:layout_constraintTop_toTopOf="@+id/text_view_account_income"
                    app:layout_constraintVertical_bias="0.519" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edit_text_description_income"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="24dp"
                    android:background="@drawable/blue_rounded"
                    android:padding="20dp"
                    android:textColor="@color/text_gray"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.52"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_account_income" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@color/white"
                    android:text="Description"
                    android:textColor="@color/text_blue"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/edit_text_description_income"
                    app:layout_constraintHorizontal_bias="0.076"
                    app:layout_constraintStart_toStartOf="@+id/edit_text_description_income"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_account_income" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_view_receipt_income"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edit_text_description_income" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            layout="@layout/category_bottom_sheet"
            android:visibility="gone" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</ScrollView>